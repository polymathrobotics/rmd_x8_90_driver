<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>rmd_x8_90_driver</name>
  <version>0.0.1</version>
  <description>Hardware Abstraction Layer for Upside</description>

  <maintainer email="zeerek@polymathrobotics.com">Zeerek Ahmad</maintainer>
  <author email="zeerek@polymathrobotics.com">Zeerek Ahmad</author>

  <license>Apache 2.0</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <depend>socketcan_adapter</depend>
  <depend>rclcpp</depend>
  <depend>rclcpp_lifecycle</depend>
  <depend>rclcpp_components</depend>
  <depend>can_msgs</depend>

  <test_depend>ament_lint_auto</test_depend>

  <!-- instead of using ament_cmake_common we specify the linters we want -->
  <test_depend>ament_cmake_uncrustify</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
